{% raw %}version: '3.8'
services:
  devcontainer:
    build:
      context: .
      args:
        REPO_NAME: {% endraw %}{{ repo_name }}{% raw %}
    # You can run `devcontainer-info content-url` in codespaces to see what image base is
    volumes:
      - ..:/workspaces/{% endraw %}{{ repo_name }}{% raw %}:cached
      # Break out the venv folder as a separate docker volume for better performance on Windows hosts
      - python_graphql_lambda_venv:/workspaces/{% endraw %}{{ repo_name }}{% raw %}/graphql_lambda/.venv
      # Break out the pnpm store folder as a separate docker volume for better performance on Windows hosts
      - pnpm_store:/workspaces/{% endraw %}{{ repo_name }}{% raw %}/.pnpm-store
    command: sleep infinity
    ports:
      - "{% endraw %}{{ ssh_port_number }}{% raw %}:2222"
    environment:
      - AWS_PROFILE=localstack

  postgres:
    image: postgres:16.4-bookworm # bookworm appears to match the default tag. no known reason we are specifically using bookworm though https://hub.docker.com/_/postgres/tags?name=16.4
    container_name: postgres_db
    restart: always
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: dev_db
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

volumes:
  python_graphql_lambda_venv: {}
  pnpm_store: {}
  postgres_data: {}{% endraw %}
